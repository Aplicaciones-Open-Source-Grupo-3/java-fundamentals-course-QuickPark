// Importamos Scanner para leer datos desde el teclado
import java.util.Scanner;

// Clase principal del programa
public class Main {

    // Método llamado saludarUsuario() que pedirá el nombre y saludará
    public static void saludarUsuario() {

        // Creamos un objeto Scanner para leer la entrada del usuario
        Scanner sc = new Scanner(System.in);

        // Pedimos el nombre del usuario
        System.out.print("Ingresa tu nombre: ");
        
        // Leemos lo que el usuario escribe y lo guardamos en la variable 'nombre'
        String nombre = sc.nextLine();

        // Mostramos un saludo personalizado
        System.out.println("¡Hola " + nombre + "! Bienvenido al mini reto :)");
    }

    // Método principal del programa (punto de entrada)
    public static void main(String[] args) {

        // Llamamos al método saludarUsuario() para ejecutar el reto
        saludarUsuario();
    }
}

